@page "/"
@using Data
@inject WhiskyService WhiskyService

@if (_whiskys == null)
{
    <h1>Overview</h1>
}
else
{
    <h1>Overview @_whiskys.Count Whisk(e)ys</h1>
}

@if (_whiskys == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Age</th>
                <th class="text-right" scope="col">Price</th>
                <th scope="col">Image</th>
                
                <th scope="col">Last Pour</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var whisky in _whiskys)
            {
                <tr>
                    <th scope="row"><a href="details/@whisky.Id">@whisky.Name</a></th>
                    <td>@whisky.Type @whisky.Alc% ABV</td>
                    <td>@whisky.Age</td>
                    <td class="text-right">@whisky.Price?.ToString("###.00") â‚¬</td>
                    <td><img height="150px" src="@whisky.ImageUrlTh"></td>
                    <td>@whisky.LastPour?.ToString("yyyy-MM-dd") @whisky.GetPoursString()</td>
                    <td><button @onclick="() => PourOne(whisky.Id)" type="button" class="btn btn-secondary">Pour One</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Whisky> _whiskys;

    protected override async Task OnInitializedAsync()
    {
        await WhiskyService.CleanImages();
        _whiskys = await WhiskyService.GetWhiskys();
    }

    private async void PourOne(string id)
    {
        _whiskys = await WhiskyService.PourOne(id);
        StateHasChanged();
    }
}
