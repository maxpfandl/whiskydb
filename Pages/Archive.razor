@page "/archive"
@using Data
@inject WhiskyService WhiskyService

@if (_whiskys == null)
{
    <h1>Archive</h1>
}
else
{
    <h1>Archive @_whiskys.Count Whisk(e)ys</h1>
}

@if (_whiskys == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Image</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var whisky in _whiskys)
            {
                <tr>
                    <td><a href="details/@whisky.Id">@whisky.Name</a></td>
                    <td>@whisky.Type</td>
                    <td><img height="150px" src="@whisky.ImageUrlTh"></td>
                    <td>@whisky.Age</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Whisky> _whiskys;


    protected override async Task OnInitializedAsync()
    {
        _whiskys = await WhiskyService.GetWhiskys(true);
    }

}
